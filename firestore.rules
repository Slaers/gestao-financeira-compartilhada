rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra para a coleção de perfis de usuário (continua a mesma)
    match /artifacts/{appId}/users/{userId}/profile/{profileDocId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Regra para a NOVA coleção de lançamentos
    // Protege a coleção principal 'lancamentos'
    match /lancamentos/{lancamentoId} {
      // Permite ler ou escrever em um documento de lançamento
      // SE o 'userId' dentro do documento for o mesmo do usuário logado.
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
